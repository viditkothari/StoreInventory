<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.viditkothari.storeinventory.AddProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgvin_product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/thumbnail"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgvin_product_image"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="52dp"
            android:hint="Product Name"
            android:inputType="text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_product_quantity"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/et_product_name"
            android:hint="@string/labelQty"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_product_price"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_product_quantity"
            android:layout_alignParentRight="true"
            android:hint="@string/labelPrice"
            android:inputType="numberDecimal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_product_quantity"
            android:ellipsize="end"
            android:hint="Description"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_product_reset"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center_vertical"
            android:text="Reset"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_below="@id/et_product_description"/>

        <TextView
            android:id="@+id/btn_product_add"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center_vertical"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_below="@id/et_product_description"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</ScrollView>